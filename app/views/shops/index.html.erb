<p id="notice"><%= notice %></p>

<h1>Listing Shops</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Coordinates</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.description %></td>
        <td><%= shop.address %></td>
        <td><%= shop.coordinates %></td>
        <td><%= shop.image_url %></td>
        <td><%= link_to 'Show', shop %></td>
      </tr>
    <% end %>
  </tbody>
</table>
